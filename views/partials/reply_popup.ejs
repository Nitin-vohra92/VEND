<script type="text/javascript">
        function sendMessage<%=response.messages_user.user_id%>() {
          document.getElementById("replyForm<%=response.messages_user.user_id%>").submit();          }
</script>

<div id="replyPopUp<%=response.messages_user.user_id%>" class="modal fade" role="dialog" >
  <div class="modal-dialog modal-vertical-centered">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header" align="center">
        <h4 class="modal-title">
        <span class="text-info">
        <strong>
        To: <%=response.messages_user.name%>
        </strong>
        </span>
        </h4>
      </div>
      <div class="modal-body">
        <span class="text-warning">
        <strong>Message:</strong>
         <form id="replyForm<%=response.messages_user.user_id%>" 
         action="/api/user/reply" method="POST" >
          <input type="hidden" name="user_id" value="<%=response.messages_user.user_id%>" />
          <input type="hidden" name="user_name" value="<%=response.messages_user.name%>" />
          <textarea name="message" class="form-control" placeholder="Write a message here..." style="margin-top: 1%; max-width: 100%; max-height:150px;" rows="3"></textarea>
        </form>
      </div>
      <div class="modal-footer">     
        <button type="button" class="btn btn-success pull-right" onClick="sendMessage<%=response.messages_user.user_id%>()">Send</button>
        <button type="button" class="btn btn-primary pull-right" style="margin-right:8px;" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>