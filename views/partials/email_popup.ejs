<script type="text/javascript">
        function changeEmail() {
          $("#emailForm").find('button[type="submit"]').trigger('click'); 
         }
</script>

<div id="emailPopUp" class="modal fade" role="dialog" >
  <div class="modal-dialog modal-vertical-centered">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header" align="center">
        <h4 class="modal-title">
        <span class="text-info">
        <strong>
        Change Email
        </strong>
        </span>
        </h4>
      </div>
      <div class="modal-body">
        <span class="text-warning">
        <strong>Note:</strong>
        </span>
        <span class="text-info">
        Changing email will update your email and all email notifications will now be sent to this new email. Please make sure that you have access to the new Email Id you provide.
        </span>
         <form id="emailForm" action="/api/user/email" method="POST" >
          <input type="email" class="form-control" name="email" required placeholder="Enter new email here" />
          <button type="submit" class="hide"></button>
        </form>
      </div>
      <div class="modal-footer">     
        <button type="button" class="btn btn-success pull-right" onClick="changeEmail()">Change</button>
        <button type="button" class="btn btn-primary pull-right" style="margin-right:8px;" data-dismiss="modal">Cancel</button>
      </div>
    </div>

  </div>
</div>