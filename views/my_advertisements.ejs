<!DOCTYPE html>
<html lang="en">
<head>
  <title>Vend</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/custom_style.css">
    <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
<script type="text/javascript">
	  $(document).ready(function() {
  <% include partials/dropdown%>
  $('a[data-target="#deletePopUp"]').click(function(){
    var id=$(this).parent().attr("id");
    $('input[name="ad_id"]').attr("value",id);
   
  });

});
</script>

</head>
<body>

<div id="wrap">
<div id="main">
<!--header-->
<% include partials/header%>

<!--content-->
<div class="container" style="margin-top: 5%;">
<% include partials/activity_notifier%>
<% include partials/delete_popup%>

<!-- main content block -->
<div class="col-md-12">
  <div>

    <!-- /container -->

    <div class="row" style="margin-top: 15px;">

        <div class="col-md-12">
        <hr style="padding:0px; margin-top: 1px; margin-bottom: 1px;">
        <h3>
        <p align="center">
          <span class="text-info">
            <strong>
              Pending Ads
            
            </strong>
          </span>
        </p>
        </h3>
        <hr style="padding:0px; margin-top: 1px; margin-bottom: 1px;">
        </div>
        <!-- for each advertisement-->
        <%for(var i=0;i<response.advertisements.length;i++){%>
          <% response.current_advertisement=response.advertisements[i];%>
          <%include partials/advertisement_ping_box%>
        <%}%>

        <%if(response.advertisements.length===0){%>
            <div align="center">
          <strong>
             You have no pending advertisements on Vend right now.
            </strong>
          </div>
          
          <%}%>
        </div>
          <!-- for successful ads -->

    <div class="row" style="margin-top: 5%;">

        <div class="col-md-12" >
        <hr style="padding:0px; margin-top: 1px; margin-bottom: 1px;">
        <h3>
        <p align="center">
          <span class="text-success">
            <strong>
              Concluded Ads
            
            </strong>
          </span>
        </p>
        </h3>
        <hr style="padding:0px; margin-top: 1px; margin-bottom: 1px;">
        </div>

        <!-- add successful ads -->
        <!-- for each advertisement-->
        <%for(var i=0;i<response.successful_advertisements.length;i++){%>
          <% response.successful_advertisement=response.successful_advertisements[i];%>
          <%include partials/advertisement_successful_item%>
        <%}%>


          <%if(response.successful_advertisements.length===0){%>
            <div align="center">
          <strong>
             You have no concluded advertisements right now.
            </strong>
          </div>
          
          <%}%>
      </div>


  </div>
</div>
<!-- end main content block -->
<!-- /conatainer after nav -->
</div>
<!-- below two /div for main and wrap -->


</div>
</div>
<%include partials/footer%>
</body>
</html>
			
